{
  "manifest_version": 3,

  "name": "WordReference Tweak",
  "description": "Additional features to WordReference",
  "version": "0.1.0",
  "icons": {
    "16": "WordReference Logo 16x PNG.png",
    "48": "WordReference Logo 48x PNG.png",
    "128": "WordReference Logo 128x PNG.png"
  },

  "action": {
    "default_icon": "WordReference Logo 48x PNG.png",
    "default_popup": "default.html",
    "persistent": true
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.wordreference.com/*/*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.wordreference.com/*/*/*"],
      "js": ["toggle.js"],
      "css": ["pageStyles.css"],
      "run_at": "document_end",
      "persistent": true
    }
  ],
  "background": {
    "service_worker": "toggle.js"
  }
}